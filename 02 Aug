import java.util.*;
public class Main{
    public static void main (String args[]){
        Scanner sc=new  Scanner(System.in);
 
        int n=sc.nextInt();
        int ps=0;
        for (int i = 0; i < n; i++){
            int r=sc.nextInt();
            int s=sc.nextInt();
            int t=sc.nextInt();
 
            if((r+s+t)>=2){
                ps++;
            }
        }
        System.out.println(ps);
    }
}