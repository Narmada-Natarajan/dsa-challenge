class Solution {
    public boolean isPalindrome(String s) {
        //lowercase conv and removing all non alphanum chars
        s=s.toLowerCase().replaceAll("[^a-z0-9]", "");

        //Two Pointers Approach
        int i=0;
        int j=s.length()-1;

        while(i<j){  
            if(s.charAt(i)!=s.charAt(j)){
                return false;
            }
            i++;
            j--;
        }
        return true;
    } 
}