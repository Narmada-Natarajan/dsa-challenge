//CODEFORCES PROBLEM -> GEORGE AND ACCOMODATION

import java.util.*;
public class Main25{
    public static void main (String[]args){
        Scanner sc=new Scanner(System.in);
        int n=sc.nextInt();//rooms
        int cnt=0;

        for(int i=0;i<n;i++){
            int p=sc.nextInt();
            int q=sc.nextInt();
            if(q-p >=2){
                cnt++;
            }         
        }
        System.out.println(cnt);        
    }

}