import java.util.*;
public class Main1{
    public static void main(String args[]){


    Scanner sc=new Scanner(System.in);
    String s=sc.nextLine();

    for(int i=0;i<s.length();i++){
        char ch=s.charAt(i);

        if(i==0 && Character.isLowerCase(ch)){
            ch=Character.toUpperCase(ch);
        }
        System.out.print(ch);
        
    }
    }
}