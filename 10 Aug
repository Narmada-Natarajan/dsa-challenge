//CODEFORCES PROBLEM -> STONES ON THE TABLE

import java.util.*;
public class Main10{

    public static void main (String args[]){
        Scanner sc=new Scanner(System.in);

        int n=sc.nextInt();//stones
        String s=sc.next();//colors->RBG

        int cnt=0;//count

        for(int i=0;i<n-1;i++){
            if(s.charAt(i)==s.charAt(i+1)){//remove
                cnt++;
                
            }
        }
        System.out.println(cnt);
    }

}