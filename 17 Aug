//CODEFORCES PROBLEM -> SOLDIERS AND BANANAS

import java.util.*;
public class Main17{
    public static void main (String args[]){
        Scanner sc=new Scanner(System.in);
        int k=sc.nextInt();
        int n=sc.nextInt(); 
        int w=sc.nextInt(); 
        int r=0;
        
        for(int i=0;i<=w;i++){
            r+= i*k;
        }
        System.out.println(Math.max(0,r-n));
    }
}